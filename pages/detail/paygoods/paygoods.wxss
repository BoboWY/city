/* 订单信息 */
.order_box{
  width: 95%;
  margin: 0 auto;
}
.order_title{
  line-height: 98rpx;
  font-size: 36rpx;
  color: #1A1A1A;
  font-weight: bold;
  border-bottom: 1rpx solid #EEEEEE;
}
.order_list_box{
}

.item_mode{
  height: 49rpx;
  line-height: 49rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}
.mode_text{
  color: #666666;
}
.mode_money{
  color: #333333;
}
.index_3{
  color: #FFA319;
}
.index_4{
  color: #333333;
  font-weight: bold;
}
.font_4{
  font-size: 32rpx;
}

/* 支付方式 */
.pay_mode{
  width: 95%;
  margin: 0 auto;
}
.pay_title{
  line-height: 98rpx;
  font-size: 36rpx;
  color: #1A1A1A;
  font-weight: bold;
  border-bottom: 1rpx solid #EEEEEE;
}

.pay_mode_list{

}

.item_pay{
  height: 49rpx;
  line-height: 49rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}
.pay_text{
  color: #333333;
}
.pay_true{
  width: 36rpx;
  height: 36rpx;
  margin-top: 6rpx;
  border-radius: 50%;
  border: 1rpx solid #B3B3B3;
  box-sizing: border-box;
}
.border_on{
  border: none;
}

/* 提价订单 */
.nav_pay_box{

}
.pay_box{
  display: flex;
  height: 98rpx;
  line-height: 98rpx;
  border-top: 1rpx solid #EEEEEE;
}
.pay_information{
  width: calc(100% - 200rpx);
  font-size: 28rpx;
  font-weight: bold;
  padding-left: 38rpx;
}

.item_pay_mode{
  width: 200rpx;
  text-align: center;
  background-color: #FFA319;
  color: #fff;
  font-size: 28rpx;
}