.stock_total_box{

}
.item_input_box{
  width: 95%;
  margin: 0 auto;
  display: flex;
}
.input_search{
  width: 560rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 6rpx;
  border: 1rpx solid #eee;
  margin-right: 14rpx;
}
.item_input{
  width: 100%;
  height: 100%;
}
.item_input_size{
  margin-left: 24rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.serach_btn{
  width: 116rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 6rpx;
  background-color: #FFA319;
  color: #fff;
  font-size: 28rpx;
}
/* 标题 */
.item_title_box{
  width: 95%;
  margin: 0 auto;  
}
.china_name{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #999999;
  position: relative;
  border-bottom: 1rpx solid #eee;
}
.china_name::after{
  border-left: 22rpx solid transparent;
  border-right: 22rpx solid transparent;
  border-top: 22rpx solid #1B1B1B;
  content: "";
  position: absolute;
  top: 30rpx;
  width: 0;
}
/* 库存列表 */

.stock_list_box{
  width: 95%;
  margin: 0 auto;
}
.item_stock_box{
  padding: 43rpx 34rpx;
  margin-top: 30rpx;
  height: 114rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(242, 242, 242, 0.5);
  box-shadow:0rpx 3rpx 20rpx 0rpx rgba(204,204,204,0.25);
  border-radius:10rpx;
}
.item_name{
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}
.item_list{
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  color: #333;
  line-height: 88rpx;
}