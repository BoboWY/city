.goods_title{
  border-bottom: 1rpx solid #eee;
}
.item_title{
  padding-left: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #999999;
  position: relative;
}
.item_title::after{
  content: "";
  position: absolute;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #1B1B1B;
  top: 20rpx;
}
