/* 显示更多 */
.show_btn{
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  color: #999999;
  font-size: 28rpx;
  position: relative;
}
.show_btn::after{
  content: "";
  width: 0;
  position: absolute;
  top: 25rpx;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #999999;
}