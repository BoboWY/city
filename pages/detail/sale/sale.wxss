.sale_box{
  padding-bottom: 98rpx;

}
.item_sale_nav{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #F2F2F2;
}
.item_nav{
  color: #999999;
  font-size: 28rpx;
}
.item_nav_active{
  color: #FFA319;
  border-bottom: 3rpx solid #FFA319;
}
/* 售后商品列表 */
.sale_goods_list{

}
.sale_btn{
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.item_sale_btn,.item_out_btn{
  width: 330rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6rpx;
  font-size: 28rpx;
}
.item_sale_btn{
  background-color: #FFF7EB;
  color: #FFA319;
}
.item_out_btn{
  border: 1rpx solid #F2F2F2;
  color: #999999;
}
/* 商品详情 */
.sale_goods{

}
.item_sale_goods{
  /* height: 450rpx; */
  padding: 27rpx 16rpx;
  margin-bottom: 36rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(242, 242, 242, 0.5);
  box-shadow:0px 3rpx 20rpx 0rpx rgba(204,204,204,0.25);
  border-radius:10rpx;
}
.item_order_munber{
  height: 98rpx;
  border-bottom: 1rpx solid #F2F2F2;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order_munber,.order_active{
  font-size: 28rpx;
  color: #666666;
}
/* 商品详情 */
.item_order_goods{
  display: flex;
  align-items: center;
  margin: 36rpx 0;
}
.item_goods{
  width: 220rpx;
  height: 220rpx;
  vertical-align: middle;
}
.item_order_goods_detail{
  margin-left: 14rpx;
} 
.goods_text{
  color: #333333;
  font-size: 28rpx;
}
.goods_munber{
  display: flex;
  justify-content: space-between;
  margin-top: 49rpx;
}
.money{
  font-weight: bold;
}
/* 售后反馈 */
.nav_sale_btn{
  width: 100%;
  height: 128rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}
.sale_text_btn{
  width: 95%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  margin: 20rpx auto;
  font-size: 32rpx;
  color: #fff;
  background-color: #FFA319;
  border-radius: 6rpx;
}