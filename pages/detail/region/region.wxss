.region_box{

}
.region_title{
  display: flex;
  height: 80rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.company_name,.china_name{
  font-size: 28rpx;
  color: #999999;
  position: relative;
}
.company_name{
  padding: 0 120rpx 0 30rpx;
}
.company_name::after,.china_name::after{
  border-left: 22rpx solid transparent;
  border-right: 22rpx solid transparent;
  border-top: 22rpx solid #1B1B1B;
  content: "";
  position: absolute;
  top: 13rpx;
  width: 0;
}
/* Ecahrt图表 */
.region_echart_box{
  width: 95%;
  margin: 0 auto;
}
.regin_information_box{
  height: 850rpx;
}
/* 显示更多 */
.show_btn{
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  color: #999999;
  font-size: 28rpx;
  position: relative;
}
.show_btn::after{
  content: "";
  width: 0;
  position: absolute;
  top: 25rpx;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #999999;
}