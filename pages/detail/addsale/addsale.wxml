<view class="add_sale_box">
<!-- 售后反馈列表 -->
    <view class="add_sale_list">
        <view class="item_add_sale">
            <view class='item_add_text'>选择原因</view>
            <view class="item_input">
                <input placeholder='选择原因' placeholder-class='item_input_text'></input> 
                <image src="../../image/right_icon.png" class='item_icon'></image>           
            </view>
        </view>
        <view class="item_add_sale">
            <view class='item_add_text'>产品型号</view>
            <view class="item_input">
                <input placeholder='产品型号' placeholder-class='item_input_text'></input>  
            </view>
        </view>
        <view class="item_add_sale">
            <view class='item_add_text'>数量</view>
            <view class="item_input">
                <input placeholder='数量' placeholder-class='item_input_text'></input>     
            </view>
        </view>
        <view class="item_add_sale">
            <view class='item_add_text'>产品编号</view>
            <view class="item_input">
                <input placeholder='产品编号' placeholder-class='item_input_text'></input> 
                <image src="../../image/munber_icon.png" class='item_icon'></image>         
            </view>
        </view>
        <view class="item_add_sale">
            <view class='item_add_text'>退款金额</view>
            <view class="item_input">
                <input placeholder='退款金额' placeholder-class='item_input_text'></input>   
            </view>
        </view>
    </view>
    <!-- 理由 -->
    <view class='reason_box'>
          <view class='reason_title'>理由</view>
          <view class='reason_input'>
              <textarea placeholder="请详细说明理由，便于我们审核..." placeholder-class='item_input_text'></textarea>
          </view>
    </view>
    <!-- 上传图片 -->
    <view class='image_box'>
        <view class="image_title">
            <text class='item_title'>上传图片</text><text class='item_text'>（上传产品图片，便于我们审核）</text>
        </view>
        <view class='image_bind'>+</view>
    </view>
    <!-- 联系人信息 -->
    <view class="menber_box">
        <view class='menber_title'>联系人信息</view>
        <view class="item_add_sale">
            <view class='item_add_text'>姓名</view>
            <view class="item_input">
                <input placeholder='请输入联系人姓名' placeholder-class='item_input_text'></input>   
            </view>
        </view>
        <view class="item_add_sale">
            <view class='item_add_text'>联系电话</view>
            <view class="item_input">
                <input placeholder='请输入联系电话' placeholder-class='item_input_text'></input>   
            </view>
        </view>
        <view class="item_add_sale">
            <view class='item_add_text'>公司名称</view>
            <view class="item_input">
                <input placeholder='请输入公司名称' placeholder-class='item_input_text'></input>   
            </view>
        </view>
        <view class="item_add_sale">
            <view class='item_add_text'>地址</view>
            <view class="item_input">
                <input placeholder='请输入地址' placeholder-class='item_input_text'></input>   
            </view>
        </view>        
    </view>

    <!-- 提交按钮 -->
    <view class="sumite_box">
        <view class='item_sumit'>提交</view>
    </view>
</view>