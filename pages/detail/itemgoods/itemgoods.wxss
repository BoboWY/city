.item_goods_box{
  /* position: relative; */
  padding-bottom: 98rpx;
}
.home_image{
  width: 100%;
  height: 150px;
}
.item_image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

/* 商品文字 */
.item_goods_detail{
  width: 95%;
  margin: 0 auto;
}

.goods_detail{
  margin-top: 29rpx;
  line-height: 33rpx;
  color: #333333;
  font-size: 28rpx;
  word-break: break-all;
}

.money_munber{
  margin-top: 37rpx;
  display: flex;
  justify-content: space-between;
}
.item_money{
  font-size: 32rpx;
  color: #1A1A1A;
}
.item_munber{
  font-size: 24rpx;
  color: #999999;
}

/* 商品详情图 */
.item_goods_image{

}
.goods_title{
  width: 95%;
  margin: 49rpx auto;
  color: #333333;
  font-size: 36rpx;
}
.goods_image{
  width: 100%;
}


/* 底部导航栏 */
.footer_box{
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  background-color: #808080;
}
/* 导航栏信息 */
.item_footer{
  display: flex;
  justify-content: space-between;
}
.item_home_text{
  width:  calc((100% - 518rpx)/2);
  text-align: center;
}
.item_shop_btn,.item_buy_btn{
  width: 259rpx;
  line-height: 98rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.item_shop_btn{
  background-color: #313131;
}
.item_buy_btn{
  background-color: #FFA319;
}
.item_footer_icon{
  width: 37rpx;
  height: 41rpx;
  vertical-align: middle;
}
.item_footer_text{
  font-size: 24rpx;
}