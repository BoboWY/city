.class_box{

}

.search_box{
  width: 95%;
  height: 64rpx;
  background:rgba(245,245,245,1);
  border-radius:4px;
  display: flex;
  margin: 0 auto;
}
.item_serach_icon{
  padding: 17rpx 17rpx 0 17rpx;
}
.item_serach_text{
  font-size: 28rpx;
  padding-top: 10rpx;
  color: #B3B3B3;
}

/* 分类商品 */
.item_class_box{
  margin-top: 10rpx;
  display: flex;
}

.item_nav_left{
  width: 160rpx;
}
.item_nav{
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
  color: #666666;
  background-color: rgba(242,242,242,1);
}
/* 激活状态 */
.item_active_text{
  color: #333333;
  background-color: #fff;
  border-left: 8rpx solid #FFA319;
}

/* 对应商品 */
.item_goods_right{
  margin-left: 10rpx;
}
.item_goods_detail{
  display: flex;
  align-items: center;
  height: 220rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border: 1rpx solid #fff;
  border-radius: 6px;
}

.item_goods_image{
  width:160rpx;
  height: 160rpx;
  vertical-align: middle;  
}

.item_goods_list{
  margin: 0 31rpx;
}

.item_goods{
  margin: 28rpx 0;
  height: 65rpx;
  font-size: 28rpx;
}
.item_goods_money_munber{
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}

.item_money{
  color: #1A1A1A;
  font-size: 32rpx;
}
.item_munber{
  width: 54rpx;
  height: 54rpx;
}
.item_munber_image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}