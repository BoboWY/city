.shop_box{

}
.shop_status{
  position: relative;
}
.item_shop_status{
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  font-size: 28rpx;
  color: #333333;
  padding-right: 30rpx;
}
/* 选中商品列表 */
.item_shop_list{
  width: 95%;
  height: 220rpx;
  margin: 0 auto 32rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(242, 242, 242, 0.5);
  box-shadow:0px 3rpx 20rpx 0rpx rgba(204,204,204,0.25);
  border-radius:6rpx;
}
.item_icon{
  width: 36rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #B3B3B3;
  margin: 0 20rpx;
}
.item_goods_image{
  width: 160rpx;
  height: 160rpx;
  vertical-align: middle;
}
.item_goods_detail{
  width: cacl(100% - 36rpx - 40rpx 160rpx - 70rpx);
  margin: 26rpx 35rpx;
}

.item_goods_text{
  color: #333333;
  font-size: 28rpx;
}

.item_money_munber{
  display: flex;
  justify-content: space-between;
  margin-top: 36rpx;
}

.item_money{
  font-size: 32rpx;
  color: #1A1A1A;
  font-weight: bold;
}
.item_munber{
  display: flex;
  border: 1rpx solid #D9D9D9;
}

.remove_munber,.munber_info,.add_munber{
  width: 48rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  font-size: 28rpx;
}
.munber_info{
  border-left: 1rpx solid #D9D9D9;
  border-right:  1rpx solid #D9D9D9;
}

/* 全选商品 */
.shop_nav_bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height:98rpx;
  line-height: 98rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -6rpx 18rpx 0rpx rgba(204,204,204,0.2);
}
.nav_information{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.nav_left,.nav_right_box{
  display: flex;
}
.nav_left{
  align-items: center;
}
.icon_place{
  position: absolute;
  top: 20rpx;
}
.item_total{
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #B3B3B3;
  margin: 0 30rpx;
}
.border_no{
  border: none;
}
.nav_left_text{
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}
.nav_text{
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  padding-right: 31rpx;
}
.nav_btn{
  width: 220rpx;
  text-align: center;
  background-color: #FFA319;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}
